<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/backgroud_clube"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/criar_clube_pnlCorpo"
        android:layout_alignBottom="@+id/criar_clube_pnlCorpo"
        android:layout_alignStart="@+id/criar_clube_pnlCorpo"
        android:layout_alignEnd="@+id/criar_clube_pnlCorpo"/>

    <LinearLayout
        android:id="@+id/criar_clube_pnlCorpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/criar_clube_btnVoltar"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/botao_voltar" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/escudo_pitaco" />

            <TextView
                style="@style/label_login"
                android:text="Nome do Clube" />

            <EditText
                android:id="@+id/criar_clube_edtNomeClube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome_clube">

                <requestFocus />
            </EditText>

            <TextView
                style="@style/label_login"
                android:text="Descrição" />

            <EditText
                android:id="@+id/criar_clube_edtDescricaoClube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome_clube" />

            <ImageButton
                android:id="@+id/criar_clube_btnCriarClube"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/botao_criar_conta" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5" />
    </LinearLayout>
</RelativeLayout>