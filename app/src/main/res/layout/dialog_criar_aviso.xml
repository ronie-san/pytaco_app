<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/criar_aviso_pnlCorpo"
        android:layout_alignTop="@+id/criar_aviso_pnlCorpo"
        android:layout_alignEnd="@+id/criar_aviso_pnlCorpo"
        android:layout_alignBottom="@+id/criar_aviso_pnlCorpo"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroud_clube" />

    <LinearLayout
        android:id="@+id/criar_aviso_pnlCorpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:divider="@drawable/linear_layout_divider_height"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end">

            <ImageButton
                android:id="@+id/criar_aviso_btnVoltar"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/botao_voltar" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/escudo_pitaco" />

            <TextView
                style="@style/label_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:labelFor="@+id/criar_aviso_edtTituloAviso"
                android:text="Título do Aviso" />

            <EditText
                android:id="@+id/criar_aviso_edtTituloAviso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit"
                android:inputType="text"
                android:maxLines="1" />

            <TextView
                style="@style/label_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:labelFor="@+id/criar_aviso_edtDescricaoAviso"
                android:text="Descrição" />

            <EditText
                android:id="@+id/criar_aviso_edtDescricaoAviso"
                style="@style/memo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/linear_layout_divider_width"
                android:gravity="center"
                android:orientation="horizontal"
                android:showDividers="middle|end"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/criar_aviso_btnSalvar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/btn_salvar" />

                <Button
                    android:id="@+id/criar_aviso_btnExcluir"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:text="Excluir"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5" />
    </LinearLayout>
</RelativeLayout>