<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/criar_aviso_pnlCorpo"
        android:layout_alignTop="@+id/criar_aviso_pnlCorpo"
        android:layout_alignEnd="@+id/criar_aviso_pnlCorpo"
        android:layout_alignBottom="@+id/criar_aviso_pnlCorpo"
        android:scaleType="centerCrop"
        android:src="@drawable/background_clube" />

    <LinearLayout
        android:id="@+id/criar_aviso_pnlCorpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:divider="@drawable/linear_layout_divider_height"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/escudo_pitaco" />

            <TextView
                style="@style/label_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:labelFor="@+id/criar_aviso_edtTituloAviso"
                android:text="Título do Aviso" />

            <EditText
                android:id="@+id/criar_aviso_edtTituloAviso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit"
                android:hint="Título"
                android:inputType="text"
                android:maxLines="1" />

            <TextView
                style="@style/label_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:labelFor="@+id/criar_aviso_edtDescricaoAviso"
                android:text="Descrição" />

            <EditText
                android:id="@+id/criar_aviso_edtDescricaoAviso"
                style="@style/memo"
                android:hint="Descrição" />

            <ImageButton
                android:id="@+id/criar_aviso_btnSalvar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/btn_salvar" />

            <Button
                android:id="@+id/criar_aviso_btnExcluir"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/btn_padrao_vermelho"
                android:text="Excluir"
                android:textColor="#ffffff"
                android:textSize="18sp" />

