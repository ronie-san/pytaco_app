<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201E1E">

    <ImageView
        android:id="@+id/main_imgCabecalho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/cabecalho" />

    <LinearLayout
        android:id="@+id/main_pnlCabecalho"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/main_imgCabecalho"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:weightSum="100">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:adjustViewBounds="true"
            android:paddingTop="25dp"
            android:scaleType="fitStart"
            android:src="@drawable/escudo_pitaco" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:adjustViewBounds="true"
            android:paddingStart="15dp"
            android:paddingTop="40dp"
            android:scaleType="fitStart"
            android:src="@drawable/fichas" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_lblQtdPytacoGlobal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_lblQtdFichaGlobal"/>

    <ListView
        android:id="@+id/main_pnlClubes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_pnlRodape"
        android:layout_below="@+id/main_pnlCabecalho"
        android:layout_alignParentStart="true" />

    <!--    <ImageView-->
    <!--        android:id="@+id/main_pnlRodape"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:adjustViewBounds="true"-->
    <!--        android:scaleType="fitEnd"-->
    <!--        android:src="@drawable/fundo_celula" />-->

    <LinearLayout
        android:id="@+id/main_pnlRodape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#201E1E"
        android:weightSum="90">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:adjustViewBounds="true"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_compras" />

        <ImageButton
            android:id="@+id/main_btnNovoClube"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:adjustViewBounds="true"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_global" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:adjustViewBounds="true"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_perfil" />
    </LinearLayout>
</RelativeLayout>