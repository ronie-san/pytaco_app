<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/list_view_rounded"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:weightSum="100">

    <ImageView
        android:id="@+id/aviso_item_imgAviso"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"

        android:scaleType="centerInside"
        android:src="@drawable/bola_vermelha" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/aviso_item_lblTitulo"
            style="@style/label_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Título" />

        <TextView
            android:id="@+id/aviso_item_lblDescricao"
            style="@style/label_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:gravity="center"
            android:text="Descrição" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aviso_item_lblData"
            style="@style/label_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="99/99/9999"
            android:layout_weight="30"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/aviso_item_lblStatus"
            style="@style/label_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:gravity="center"
            android:text="Status"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>