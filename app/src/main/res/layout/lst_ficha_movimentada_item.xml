<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_centerVertical="true"
    android:background="@drawable/list_view_rounded"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="90">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ficha_movimentada_item_lblUsuarioRecebeu"
            style="@style/label_login"
            android:text="Usuário recebeu"
            android:textSize="15sp" />

        <TextView
            style="@style/label_login"
            android:text="Saldo anterior"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ficha_movimentada_item_lblQtdFichaAnterior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/ficha"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="5sp"
            app:autoSizeTextType="uniform" />

        <TextView
            style="@style/label_login"
            android:text="Saldo posterior"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ficha_movimentada_item_lblQtdFichaAtual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/ficha"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="5sp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ficha_movimentada_item_lblAcao"
            style="@style/label_login"
            android:text="Usuário recebeu"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ficha_movimentada_item_imgAcao"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ficha_movimentada_item_imgFundoPytaco"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/fundo_ficha_pytaco" />

            <ImageView
                android:id="@+id/ficha_movimentada_item_imgFicha"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/ficha_movimentada_item_imgFundoPytaco"
                android:paddingVertical="5dp"
                android:paddingStart="5dp"
                android:src="@drawable/ficha_pytaco" />

            <TextView
                android:id="@+id/ficha_movimentada_item_lblQtdFichaMovimentada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/ficha_movimentada_item_imgFundoPytaco"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/ficha_movimentada_item_imgFicha"
                android:gravity="center"
                android:maxLines="1"
                android:paddingEnd="4dp"
                android:textColor="@color/ficha"
                app:autoSizeMaxTextSize="50sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ficha_movimentada_item_lblUsuarioEnvio"
            style="@style/label_login"
            android:text="Usuário recebeu"
            android:textSize="15sp" />

        <TextView
            style="@style/label_login"
            android:text="Saldo anterior"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ficha_movimentada_item_lblQtdFichaAnteriorAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/ficha"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="5sp"
            app:autoSizeTextType="uniform" />

        <TextView
            style="@style/label_login"
            android:text="Saldo posterior"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ficha_movimentada_item_lblQtdFichaAtualAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/ficha"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="5sp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>
</LinearLayout>