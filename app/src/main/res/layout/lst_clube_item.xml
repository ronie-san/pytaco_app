<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_rounded"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="65"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clube_item_lblNome"
            style="@style/label_login"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Nome do clube"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/clube_item_lblDescricao"
            style="@style/label_login"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Descrição do clube"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="5dp"
                android:text="Cód. Clube:"
                android:textColor="@color/pytaco"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/clube_item_lblCodClube"
                style="@style/label_login"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/pytaco"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="35"
        android:gravity="center">

        <ImageView
            android:id="@+id/clube_item_imgFundoPytaco"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/fundo_ficha_pytaco" />

        <ImageView
            android:id="@+id/clube_item_imgFicha"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/clube_item_imgFundoPytaco"
            android:paddingVertical="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:src="@drawable/ficha_pytaco" />

        <TextView
            android:id="@+id/clube_item_lblQtdFicha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/clube_item_imgFicha"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/ficha"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="5sp"
            app:autoSizeTextType="uniform" />
    </RelativeLayout>
</LinearLayout>