<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_rounded"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/membro_item_lblNome"
            style="@style/label_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="start|center_vertical"
            android:text="Nome" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="end|center_vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/membro_item_imgFundoFicha"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/fundo_ficha_pytaco" />

            <ImageView
                android:id="@+id/membro_item_imgFicha"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/membro_item_imgFundoFicha"
                android:padding="5dp"
                android:src="@drawable/ficha_pytaco" />

            <TextView
                android:id="@+id/membro_item_lblQtdFicha"
                style="@style/label_login"
                android:layout_toEndOf="@+id/membro_item_imgFicha"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/ficha" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/membro_item_lblTipo"
            style="@style/label_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="start|center_vertical"
            android:text="Tipo" />

        <TextView
            android:id="@+id/membro_item_lblStatus"
            style="@style/label_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="end|center_vertical"
            android:paddingEnd="10dp"
            android:text="Status" />
    </LinearLayout>
</LinearLayout>