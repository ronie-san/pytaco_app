<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/list_view_rounded">

    <CheckBox
        android:id="@+id/contador_item_chkMarcado"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:buttonTint="@color/pytaco"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/contador_item_chkMarcado"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/contador_item_lblNome"
                style="@style/label_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="start|center_vertical"
                android:text="Nome" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="50"
                android:gravity="end">

                <ImageView
                    android:id="@+id/contador_item_imgFundoPytaco"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/fundo_ficha_pytaco" />

                <ImageView
                    android:id="@+id/contador_item_imgFicha"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/contador_item_imgFundoPytaco"
                    android:paddingVertical="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/ficha_pytaco" />

                <TextView
                    android:id="@+id/contador_item_lblQtdFicha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/contador_item_imgFicha"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/contador_item_imgFicha"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/ficha"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeMinTextSize="5sp"
                    app:autoSizeTextType="uniform" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contador_item_lblTipo"
                style="@style/label_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="start|center_vertical"
                android:text="Tipo" />

            <!--            <TextView-->
            <!--                android:id="@+id/contador_item_lblStatus"-->
            <!--                style="@style/label_login"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_weight="50"-->
            <!--                android:gravity="end|center_vertical"-->
            <!--                android:paddingEnd="10dp"-->
            <!--                android:text="Status" />-->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>