<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_aviso">

    <ImageView
        android:id="@+id/avisos_imgCabecalho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/cabecalho" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/avisos_pnlItemCabecalho"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:paddingVertical="10dp"
            android:src="@drawable/escudo_pitaco" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/avisos_pnlItemCabecalho"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/avisos_imgCabecalho"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/avisos_btnCriarAviso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="7"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Adicionar aviso"
            android:scaleType="centerInside"
            android:src="@drawable/icone_main" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="86" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avisos_pnlItemCabecalho"
        android:layout_alignBottom="@+id/avisos_pnlItemCabecalho"
        android:adjustViewBounds="true"
        android:src="@drawable/lbl_avisos" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/avisos_lsvAvisos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/avisos_pnlItemCabecalho"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"
        android:paddingVertical="10dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="vertical" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/avisos_pnlItemCabecalho"
        android:fontFamily="@font/britanic"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:text="Sem avisos"
        android:textColor="@color/pytaco"
        android:textSize="25sp"
        android:visibility="gone" />
</RelativeLayout>