<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/criar_clube_pnlCorpo"
        android:layout_alignTop="@+id/criar_clube_pnlCorpo"
        android:layout_alignEnd="@+id/criar_clube_pnlCorpo"
        android:layout_alignBottom="@+id/criar_clube_pnlCorpo"
        android:scaleType="centerCrop"
        android:src="@drawable/background_clube" />

    <LinearLayout
        android:id="@+id/criar_clube_pnlCorpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:divider="@drawable/linear_layout_divider_height"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end">

            <ImageButton
                android:id="@+id/criar_clube_btnVoltar"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/btn_voltar" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/escudo_pitaco" />

            <TextView
                style="@style/label_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:labelFor="@+id/criar_clube_edtNomeClube"
                android:text="Nome do Clube" />

            <EditText
                android:id="@+id/criar_clube_edtNomeClube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit"
                android:hint="Nome"
                android:inputType="text"
                android:maxLines="1" />

            <TextView
                style="@style/label_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:labelFor="@+id/criar_clube_edtDescricaoClube"
                android:text="Descrição" />

            <EditText
                android:id="@+id/criar_clube_edtDescricaoClube"
                style="@style/memo"
                android:hint="Descrição" />

            <ImageButton
                android:id="@+id/criar_clube_btnCriarClube"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/btn_criar_clube" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5" />
    </LinearLayout>
</RelativeLayout>