<resources>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="NoAnimTheme" parent="AppTheme" />

    <style name="label_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edt_criar_conta">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edit_color" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
        <item name="android:textSize">13pt</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:colorControlHighlight">@android:color/white</item>
        <item name="android:fontFamily">@string/font</item>
    </style>

    <style name="input_color" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
</resources>
