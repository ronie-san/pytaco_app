<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@color/background_padrao</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:colorPrimaryDark">@color/background_padrao</item>
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="android:fontFamily">@font/britanic</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <!-- cor da barra de notificações -->
        <item name="android:colorPrimaryDark">@color/background_padrao</item>
        <!-- cor da barra de navegação -->
        <item name="android:navigationBarColor">@color/background_padrao</item>
    </style>

    <style name="fonte_padrao">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/britanic</item>
    </style>

    <style name="label_login" parent="fonte_padrao">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="memo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">top|left</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:background">@drawable/edit</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="singleLine">false</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="edtBase" parent="fonte_padrao">
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edt_criar_conta" parent="edtBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_color" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:colorControlHighlight">@android:color/white</item>
    </style>

    <style name="input_color" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
</resources>
